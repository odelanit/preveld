@model Preveld.ViewModels.ResetPassword

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Reset Password";
}

<div class="login-box">
    <div class="login-logo">
        <h3>Welcome to IDE@S</h3>
    </div>
    <div class="card">
        <div class="card-header">
            Reset Password
        </div>
        <div class="card-body login-card-body">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @type = "email" })
                    <small>
                        @Html.ValidationMessageFor(a => a.Email)
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Password)
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(a => a.Email)
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.PasswordConfirm)
                    @Html.PasswordFor(a => a.PasswordConfirm, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(a => a.PasswordConfirm)
                    </small>
                </div>
                @Html.HiddenFor(a => a.ReturnToken)
                <div class="form-group">
                    <button class="btn btn-primary">Reset Password</button>
                    <a href="/Account/Login" class="float-right btn btn-link">Login</a>
                </div>
            }
        </div>
    </div>
</div>